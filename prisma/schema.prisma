generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url   = env("DATABASE_URL")
}

model Team {
  id             String   @id @default(cuid())
  name           String   @unique
  sustainability Int      @default(0) // Max 20%
  prototype      Int      @default(0) // Max 30%
  originality    Int      @default(0) // Max 15%
  application    Int      @default(0) // Max 15%
  finance        Int      @default(0) // Max 10%
  presentation   Int      @default(0) // Max 10%
  totalScore     Int      @default(0)
  updatedAt      DateTime @updatedAt
}